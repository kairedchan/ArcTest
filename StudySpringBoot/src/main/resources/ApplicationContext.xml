<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <!-- 由 Spring容器创建该类的实例对象, 默认单例模式-->
    <bean id="personDao" class="com.greatmap.arc.ioc.PersonDaoImpl" />
    <bean id = "personService" class="com.greatmap.arc.ioc.PersonServiceImpl">
        <property name="personDao" ref="personDao"></property>
    </bean>

<!--    静态工厂方法实例化-->
    <bean id = "person2" class="com.greatmap.arc.ioc.MyBeanFactory" factory-method="createBean"></bean>

<!--    实例工厂方法实例化-->
    <bean id="myBeanFactory" class="com.greatmap.arc.ioc.MyBeanFactory2"></bean>
    <bean id="person3" factory-bean="myBeanFactory" factory-method="createPerson" scope="prototype"></bean>

    <bean id = "person" class="com.greatmap.arc.ioc.Person">
        <property name="name" value="花里胡哨"></property>
    </bean>
</beans>